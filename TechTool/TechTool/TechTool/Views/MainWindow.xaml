<Window x:Class="TechTool.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        xmlns:local="clr-namespace:TechTool"
        xmlns:model="clr-namespace:TechTool.Models"
        mc:Ignorable="d"
        Title="TechTool" Height="200" Width="128"
        WindowState="{Binding Path=WindowsStateBind}"
        ShowInTaskbar="{Binding Path=ShowInTaskBarBind}">

    <Window.Resources>
        <model:TaskbarItem x:Key="TBI"></model:TaskbarItem>
    </Window.Resources>
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Logged in as:"/>
            <Button Content="Log In"/>
        </StackPanel>
        <ListBox>
            <Button Content="Ping A System" />
            <Button Content="What is my IP" />
        </ListBox>
    </StackPanel>
</Window>
